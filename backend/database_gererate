create table public.user_settings
(
    setting_name  varchar(50) not null
        primary key,
    setting_value text,
    last_updated  timestamp default CURRENT_TIMESTAMP
);

alter table public.user_settings
    owner to group4;

create table public.daily_activity_summary
(
    activity_date   date not null
        primary key,
    calories_burned numeric
);

alter table public.daily_activity_summary
    owner to group4;

create table public.food_photos
(
    id           serial
        primary key,
    file_path    text not null,
    upload_time  timestamp default CURRENT_TIMESTAMP,
    food_name    varchar(128),
    calorie      double precision,
    protein      varchar(128),
    fat          varchar(128),
    carbohydrate varchar(128),
    fiber        varchar(128),
    description  text,
    photo_date   date,
    weight       double precision
);

alter table public.food_photos
    owner to group4;

create table public.workout_records
(
    id                    serial
        primary key,
    exercise_type         varchar(50) not null,
    start_time            timestamp,
    end_time              timestamp,
    total_calories_burned double precision,
    pushup_count          integer,
    squat_count           integer,
    running_distance_km   double precision,
    abnormal_heart_rate   boolean,
    abnormal_hr_times     text
);

alter table public.workout_records
    owner to group4;

create table public.scale_weight
(
    time   timestamp not null
        primary key,
    weight integer,
    mode   varchar(8)
);

alter table public.scale_weight
    owner to group4;

create table public.band_heart_rate
(
    id                   serial
        primary key,
    time                 timestamp not null,
